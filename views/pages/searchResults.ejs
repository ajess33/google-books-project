<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Book Results</title>
  <link rel="stylesheet" href="styles/base.css">
  <link rel="stylesheet" href="styles/modules.css">
  <link rel="stylesheet" href="styles/layout.css">
  <link rel="stylesheet" href="styles/state.css">
  <link rel="stylesheet" href="styles/reset.css">

  <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,700" rel="stylesheet">
</head>

<body>
  <h1 class="title">Search Results</h1>
  <a href="search">SEARCH AGAIN</a>
  <section class="books-list">
    <% data.forEach(book => { %>
      <section class="book-results-list">
      <form action="/save" method="post">
        <li class="book">
          <input name="title" type="hidden" value="<%= book.title %>" />
          <h4><%= book.title %></h4>

          <input name="image_url" type="hidden" value="<%= book.image_url %>" />
          <img src='<%= book.image_url %>' alt="book thumbnail">

          <input name="author" type="hidden" value="<%= book.author %>" />
          <em>
            <p class="book-author"><%= book.author %></p>
          </em>

          <input name="description" type="hidden" class="description" value='<%= book.description %>' />
          <p class="book-description"><%= book.description %></p>

          <input name="bookshelf" type="text" placeholder="Save book to this bookshelf" value="" />

          <input name="isbn" type="hidden" value="<%= book.isbn %>" />


          <input class="save-book" value="SAVE BOOK" type="submit" />
        </li>
      </form>
      <section class='update-section'>
        <button class="update-book">UPDATE</button>

      </section>

    </section>
      <% }) %>
  </section>
  <%- include("../layout/footer.ejs") %>

</body>

</html>